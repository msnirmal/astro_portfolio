---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <h1>Featured Recipes</h1>

  <div class="row">
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Creamy Pasta</h5>
          <p class="card-text">A simple and delicious pasta dish.</p>
          <a href="/recipes/pasta" class="btn btn-primary">View Recipe</a>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Spicy Curry</h5>
          <p class="card-text">A warm and comforting curry.</p>
          <a href="/recipes/curry" class="btn btn-primary">View Recipe</a>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Fresh Salad</h5>
          <p class="card-text">A healthy and refreshing salad.</p>
          <a href="/recipes/salad" class="btn btn-primary">View Recipe</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
